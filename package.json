{
  "name": "@adobe/helix-code-bus",
  "version": "1.1.1",
  "private": true,
  "description": "Helix Code Bus",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon",
    "start": "node ./test/dev/server.js",
    "test": " nyc mocha -i -g 'Post-Deploy'",
    "test-ci": "nyc mocha  -i -g 'Post-Deploy' --reporter xunit --reporter-options output=./junit/test-results.xml && codecov",
    "test-postdeploy": "mocha --reporter xunit --reporter-options output=./junit/test-results.xml -g 'Post-Deploy'",
    "lint": "eslint .",
    "semantic-release": "semantic-release",
    "docs": "npx jsdoc2md -c .jsdoc.json --files 'src/*.js'  > docs/API.md",
    "commit": "git-cz",
    "build": "hedy -v",
    "deploy": "unset HLX_AWS_ROLE; hedy -v --deploy --test",
    "deploy-sequences": "hedy --no-build -no-hints -l major -l minor",
    "deploy-ci": "unset HLX_AWS_ROLE; hedy -v --deploy --pkgVersion=ci$CIRCLE_BUILD_NUM -l ci --test"
  },
  "wsk": {
    "name": "helix-services/code-bus@${version}",
    "memory": 512,
    "awsRole": "arn:aws:iam::118435662149:role/helix-service-role-s3-rw",
    "testUrl": "/_status_check/healthcheck.json",
    "target": "aws"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adobe/helix-code-bus"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/adobe/helix-code-bus/issues"
  },
  "homepage": "https://github.com/adobe/helix-code-bus#readme",
  "dependencies": {
    "@adobe/helix-shared-process-queue": "1.0.0",
    "@adobe/helix-shared-utils": "1.0.3",
    "@adobe/helix-shared-wrap": "1.0.0",
    "@adobe/helix-status": "9.1.6",
    "@adobe/helix-universal": "1.5.0",
    "@adobe/helix-universal-logger": "1.0.3",
    "@aws-sdk/client-s3": "3.14.0",
    "@octokit/rest": "18.5.3"
  },
  "devDependencies": {
    "@adobe/eslint-config-helix": "1.1.4",
    "@adobe/helix-deploy": "4.4.1",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/exec": "5.0.0",
    "@semantic-release/git": "9.0.0",
    "chai": "4.3.4",
    "chai-http": "4.3.0",
    "codecov": "3.8.1",
    "commitizen": "4.2.3",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "8.2.0",
    "eslint": "7.25.0",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-import": "2.22.1",
    "jsdoc-to-markdown": "7.0.1",
    "junit-report-builder": "3.0.0",
    "lint-staged": "10.5.4",
    "mocha": "8.3.2",
    "nock": "13.0.11",
    "nodemon": "2.0.7",
    "nyc": "15.1.0",
    "proxyquire": "2.1.3",
    "semantic-release": "17.4.2"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  }
}
